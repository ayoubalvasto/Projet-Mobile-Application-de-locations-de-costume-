<?xml version='1.0' encoding='utf-8'?>
<androidx.cardview.widget.CardView xmlns:android='http://schemas.android.com/apk/res/android'
    xmlns:app='http://schemas.android.com/apk/res-auto'
    android:layout_width='match_parent'
    android:layout_height='wrap_content'
    android:layout_margin='8dp'
    app:cardCornerRadius='10dp'
    app:cardElevation='3dp'>

    <LinearLayout
        android:layout_width='match_parent'
        android:layout_height='wrap_content'
        android:orientation='vertical'
        android:padding='12dp'>

        <TextView
            android:id='@+id/tvAdminCostumeTitle'
            android:layout_width='wrap_content'
            android:layout_height='wrap_content'
            android:text='@string/admin_costume_title_placeholder'
            android:textStyle='bold'
            android:textSize='16sp'
            android:textColor='#212121' />

        <TextView
            android:id='@+id/tvAdminCostumeSub'
            android:layout_width='wrap_content'
            android:layout_height='wrap_content'
            android:text='@string/admin_costume_sub_placeholder'
            android:textColor='#616161'
            android:layout_marginTop='4dp' />

        <LinearLayout
            android:layout_width='match_parent'
            android:layout_height='wrap_content'
            android:orientation='horizontal'
            android:layout_marginTop='8dp'>

            <Button
                android:id='@+id/btnAdminEdit'
                android:layout_width='wrap_content'
                android:layout_height='wrap_content'
                style='?attr/borderlessButtonStyle'
                android:text='@string/edit' />

            <Button
                android:id='@+id/btnAdminDelete'
                android:layout_width='wrap_content'
                android:layout_height='wrap_content'
                android:layout_marginStart='10dp'
                style='?attr/borderlessButtonStyle'
                android:text='@string/delete' />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
