<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header avec nom et statut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNomCostumeLoc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Costume"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:letterSpacing="0.01"/>

            <!-- Badge de statut moderne -->
            <TextView
                android:id="@+id/tvStatutLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="en_attente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_badge_en_attente"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>

        <!-- Dates avec icÃ´ne -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvDatesLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/12/2025 - 22/12/2025"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Prix total -->
        <TextView
            android:id="@+id/tvPrixLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix : 0 DH"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginTop="8dp"/>

        <!-- Note optionnelle -->
        <TextView
            android:id="@+id/tvNoteLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:background="@drawable/note_background"
            android:padding="10dp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

